{% extends 'layout.twig' %}

{% block title "The posts" %}

{% block body %}
    <h1>Welcome in the Blog</h1>
    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}">
                    {{ post.name }}
                </a>
            </li>
        {% endfor %}
    </ul>

    {{ paginate(posts, 'blog.index') }}
{% endblock %}
